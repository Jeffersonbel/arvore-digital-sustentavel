        mapboxgl.accessToken = 'SEU_TOKEN_MAPBOX';
        const map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [-51.9253, -14.2350], // Brasil
            zoom: 4
        });
    </script>
